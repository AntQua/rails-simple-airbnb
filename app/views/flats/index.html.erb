<h1>All Our Flats (<%= Flat.count %>)</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.description %></p>
          <p class="card-text">
            <strong>Price per night:</strong> â‚¬<%= flat.price_per_night %>
            <br>
            <strong>Number of guests:</strong> <%= flat.number_of_guests %>
          </p>
            <%= link_to 'View Details', flat_path(flat), class: 'btn btn-primary mr-2' %>
            <%# <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-secondary' %>
            <%# <%= link_to "Delete", flat_path(flat.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger' %>
              <br>
          <img src="<%= flat.picture_url %>" alt="<%= flat.name %>" class="mt-3 img-fluid">
        </div>
      </div>
    </div>
  <% end %>
</div>
